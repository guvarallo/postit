<div class="row">
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by</span> <%= post.creator.present? ? post.creator.username : "Anonymous" %>
      <small>on <%= post.created_at.strftime("%d %b. %Y at %H:%M") %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span> 
    </small>
  </div>
</div>